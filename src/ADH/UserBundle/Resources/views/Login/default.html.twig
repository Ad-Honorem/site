{% extends "::base.html.twig" %}

{% block content %}
	<article style="margin: auto; max-width: 660px;">
		{{ form_start(form, { "action": path("adh_user_login_check") }) }}
			{{ form_errors(form) }}
			
			{# Username #}
			{% if not reauth %}
				{{ form_row(form.username) }}
			{% endif %}
			
			{# Password #}
			<div class="form-group">
				{{ form_label(form.password) }}
				<div class="col-sm-10">
					{{ form_widget(form.password) }}
					{% if not reauth %}
						<a href="{{ path("adh_user_login_forgetrequest") }}">Mot de passe oubli√©</a>
					{% endif %}
				</div>
			</div>
			
			{# Remember me #}
			{% if not reauth %}
				{{ form_row(form.remember_me) }}
			{% endif %}
			
			{# Login #}
			{{ form_row(form.login) }}
			
			{# Register #}
			{% if not reauth %}
				<a href="{{ path("adh_user_login_register") }}">Je n'ai pas de compte</a>
			{% endif %}
		{{ form_end(form) }}
	</article>
{% endblock content %}