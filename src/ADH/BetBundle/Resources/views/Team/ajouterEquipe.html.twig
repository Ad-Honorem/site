{% extends "::base.html.twig" %}

{% block content %}
<h3>Ajout d'une équipe</h3>
    <hr>
    <div class="row">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_errors(form) }}
                {{ form_label(form.nom, "Nom : ") }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                {{ form_label(form.poule) }}
                {{ form_widget(form.poule, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <input type="submit" value="Créer" class="btn btn-info form-control" /> - 
            <input type="reset" value="Annuler" class="btn btn-danger form-control" onclick='location.href = "{{ path('adh_bet_match') }}"' />
            {{ form_end(form) }}
    </div>
{% endblock content %}