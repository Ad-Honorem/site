				<dt class="pseudo">
					<a href="{{ path("adh_user_user_account") }}" title="Plus d'infos" class="open">{{ app.user.pseudo }}</a>
				</dt>
				<dd class="connected-since">Connect√© depuis 1 heure</dd>
				<dd class="last-connection">Derniere connexion il y a 3 mois</dd>
			</dl>
		{% else %}
			<a href="{{ path("adh_user_login") }}">Se connecter</a>
